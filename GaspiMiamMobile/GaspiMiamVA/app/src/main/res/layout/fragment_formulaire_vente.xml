<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="158dp">

            <TextView
                android:id="@+id/nomProduitForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="120dp"
                android:text="Produit"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:typeface="serif" />

            <ImageView
                android:id="@+id/imageViewProduitForm"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_menu_gallery" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <EditText
                android:id="@+id/editText2Form"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#DCDCDC"
                android:breakStrategy="balanced"
                android:fitsSystemWindows="true"
                android:gravity="top"
                android:hint="Message to describe the product"
                android:inputType="textMultiLine"
                android:padding="0dp"
                android:singleLine="false"
                android:textSize="13dp"
                android:typeface="serif" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="0dp"
                android:text="Ajoute la quantité"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/quantiteForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:padding="0dp"
                android:textSize="13dp"
                android:typeface="serif"/>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="0dp"
                android:text="Ajoute le prix"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:id="@+id/prixForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:padding="0dp"
                android:textSize="13dp"
                android:typeface="serif"/>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="5dp"
                android:text="Choisis une catégorie"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckedTextView
                    android:id="@+id/checkedFruit"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Fruit" />

                <CheckedTextView
                    android:id="@+id/checkedLegume"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Légume" />

                <CheckedTextView
                    android:id="@+id/checkedAutre"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Autre" />

                <Button
                    android:id="@+id/buttonvendreFormVendre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vendre" />

            </LinearLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

